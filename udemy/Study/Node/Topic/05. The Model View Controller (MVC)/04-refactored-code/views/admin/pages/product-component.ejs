<section class="products">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Products</h1>
    <% if (prods.length > 0){%>
        <div class="product-lists">
            <div class="row">
                <% for (let data of prods) { %>
                    <div class="col-md-4 mb-3">
                        <div class="card h-100 product_box">
                            <a href="javascript: void(0)">
                              <img src="<%= data.image %>" class="card-img-top" alt="Product">
                              <!-- <img src="https://picsum.photos/700/550" class="card-img-top" alt="Product"> -->
                            </a>
                            <div class="card-body p-3">
                              <div class="d-flex justify-content-between">
                                <div>
                                  <p class="h4 text-primary">$<%= data.price %></p>
                                </div>
                                <div>
                                  <a href="javascript: void(0)" class="text-secondary lead" data-toggle="tooltip" data-placement="left" title="Compare">
                                    <i class="fa fa-line-chart" aria-hidden="true"></i>
                                  </a>
                                </div>
                              </div>
                              <p class="mb-0">
                                <strong>
                                  <a href="javascript: void(0)" class="text-secondary"><%= data.title %></a>
                                </strong>
                              </p>
                              <p class="mb-1">
                                <small>
                                  <a href="javascript: void(0)" class="text-secondary"><%= data.desc %></a>
                                </small>
                              </p>
                              <div class="d-flex justify-content-between">
                                <div class="col px-0">
                                  <button class="btn btn-outline-primary btn-block">
                                    Add To Cart 
                                    <i class="fa fa-shopping-basket" aria-hidden="true"></i>
                                  </button>
                                </div>
                                <div class="ml-2">
                                  <a href="#" class="btn btn-outline-success" data-toggle="tooltip" data-placement="left" title="Add to Wishlist">
                                    <i class="fa fa-heart" aria-hidden="true"></i>
                                  </a>
                                </div>
                              </div>
                            </div>
                          </div>
                    </div>
                <% } %>
            </div>
        </div>
    <%} else {%>
        <div class="card mb-4 py-3 border border-danger border-width-2-px" style="max-width: 450px;">
            <div class="card-body text-center text-danger">
                Product Not Added Yet
            </div>
        </div>
    <%}%>
</section>


<!-- add products button -->
<a href="javascript: void(0);" class="btn btn-primary btn-circle btn-addmore" data-toggle="modal" data-target="#myModal">
    <i class="fas fa-plus"></i>
</a>

<div class="modal fade" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Add Product</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <form action="/admin/submit-product" method="POST">
            <div class="row">
                <div class="col-lg-6 colmd-6 col-sm-6">
                    <div class="form-group">
                        <label for="prodName">Name</label>
                        <input type="text" name="title" id="prodName" class="form-control" placeholder="Type...." required />
                    </div>
                </div>
                <div class="col-lg-6 colmd-6 col-sm-6">
                    <div class="form-group">
                        <label>Category</label>
                        <select name="cat" class="form-control" required>
                            <option value="options" selected disabled>---- Choose Option ----</option>
                            <option value="mobile">Mobile</option>
                            <option value="laptop">Laptop</option>
                            <option value="laptop">Book</option>
                            <option value="laptop">Sports</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-6 colmd-6 col-sm-6">
                    <div class="form-group">
                        <label for="prodPrice">Price</label>
                        <input type="text" name="price" id="prodPrice" class="form-control" placeholder="Type...." required />
                    </div>
                </div>
                <div class="col-lg-6 colmd-6 col-sm-6">
                    <div class="form-group">
                        <label for="prodImage">Image</label>
                        <input type="text" name="image" id="prodImage" class="form-control" placeholder="Type...." required />
                    </div>
                </div>
                <div class="col-lg-12 colmd-12 col-sm-12">
                    <div class="form-group">
                        <label for="prodDesc">Description</label>
                        <textarea  name="desc" id="prodDesc" class="form-control" placeholder="Type...." required></textarea>
                    </div>
                </div>
                <div class="col-lg-12 colmd-12 col-sm-12 pt-3 text-center">
                    <button type="submit" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white no-bg pr-0">
                            <i class="far fa-save"></i>
                        </span>
                        <span class="text">Save</span>
                    </a>
                </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="black-backdrop"></div>
  </div>