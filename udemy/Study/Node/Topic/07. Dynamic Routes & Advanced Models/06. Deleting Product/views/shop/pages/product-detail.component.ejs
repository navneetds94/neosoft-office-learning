<div class="container pt-5 pb-5">
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-5">
            <img src="<%= prod.imageUrl %>" alt="<%= prod.title %>" class="w-100 border" />
        </div>
        <div class="col-lg-8 col-md-8 col-sm-7">
            <h2><%= prod.title %></h2>
            <p><%= prod.description %></p>
            <strong class="display-1 text-success">$<%= prod.price%></strong>
            <form action="/cart" method="post">
                <button type="submit" class="btn btn-outline-primary btn-lg mt-4">Add to cart</button>
                <input type="hidden" name="productId" value="<%= prod.id %>" />
                <input type="hidden" name="productPrice" value="<%= prod.price %>" />
            </form>
        </div>
    </div>
</div>