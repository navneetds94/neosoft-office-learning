extends layouts/main-layout

block content
    main
        h1 Add Product
        form.medium-form(action="/submit-product",method="POST")
            .row
                .col-lg-4.col-md-4.col-sm-4
                    .form-group
                        label(for="prodName") Name
                        input.form-control.height-control(type="text",name="name",placeholder="Type.....",required)#prodName

                .col-lg-4.col-md-4.col-sm-4
                    .form-group
                        label(for="prodCategory") Category
                        input.form-control.height-control(type="text",name="category",placeholder="Type.....",required)#prodCategory

                .col-lg-4.col-md-4.col-sm-4
                    .form-group
                        label(for="prodPrice") Price
                        input.form-control.height-control(type="number",name="price",placeholder="Type.....",min="1",required)#prodPrice

                .col-lg-12.col-md-12.col-sm-12
                    .form-group
                        label(for="prodDescription") Description
                        textarea.form-control.textarea-height(name="description",placeholder="Type.....",required)#prodDescription
            
            br

            button.btn.btn-primary(type="submit")
                i.fa.fa-save
                | &nbsp;&nbsp;Send