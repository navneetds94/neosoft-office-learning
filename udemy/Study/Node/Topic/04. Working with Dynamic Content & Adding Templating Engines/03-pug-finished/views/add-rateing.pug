extends layouts/main-layout

block content
    main
        h1 Add Rateing
        form.medium-form(action="/submit-rateing",method="POST")
            .row
                .col-lg-4.col-md-4.col-sm-4
                    .form-group
                        label(for="emailid") Email
                        input.form-control.height-control(type="email",name="email",placeholder="Type.....",required)#emailid

                .col-lg-4.col-md-4.col-sm-4
                    .form-group
                        label(for="password") Password
                        input.form-control.height-control(type="password",name="pwd",placeholder="Type.....",required)#password

                .col-lg-4.col-md-4.col-sm-4
                    .form-group
                        label(for="rate") Rate
                        input.form-control.height-control(type="number",name="rate",placeholder="Type.....",min="1",max="5",required)#rate

                .col-lg-12.col-md-12.col-sm-12
                    .form-group
                        label(for="comment") Comment
                        textarea.form-control.textarea-height(name="cmt",placeholder="Type.....",required)#comment
            
            br

            button.btn.btn-primary(type="submit")
                i.fa.fa-save
                | &nbsp;&nbsp;Send